<h1>ブログの新規投稿</h1>

<%= link_to "一覧", blogs_path %>

<%= form_with model: @blog, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <%= f.submit nil %>
<% end %>